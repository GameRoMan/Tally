---
import Label from '@components/ui/Label.astro';
import Output from '@components/ui/Output.astro';
import type { OutputId } from '@lib/config/output.ts';
import { getLocaleStrings } from '@lib/i18n/index.ts';
import { wKey } from '@utils/index.ts';

/**
 * Props for an labelled output field displaying a computed text statistic.
 *
 * @property id - The output field ID (e.g., 'words', 'characters')
 */
interface Props {
	id: OutputId;
}

const { id } = Astro.props;

const msg = getLocaleStrings(Astro).output;
const label = msg.map[id].label;
---

<Label {...wKey(id, 'label')}>
	{label}
	<Output {id} />
</Label>

<style>
	label {
		flex-direction: column;
		flex: 1;
		padding: var(--padding-base);
		background-color: var(--color-base-2);
	}
</style>
