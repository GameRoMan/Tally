---
import type { HTMLAttributes } from 'astro/types';
import type { WithChildren } from '../../types.ts';
import Card from './Card.astro';

/**
 * Props for a styled form container with interactive label hover effects.
 */
type Props = WithChildren<true, HTMLAttributes<'form'>>;

const props = Astro.props;
---

<!-- This must be on the same line to prevent whitespace from being inserted -->
<Card as="form" {...props}><slot /></Card>

<style>
	form {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;

		&:hover {
			> label {
				transition-duration: var(--duration-md);

				&:has(> input) {
					opacity: var(--opacity-md);
				}

				&:has(> input:hover) {
					opacity: 1;
					box-shadow: var(--box-shadow-md);
				}
			}
		}
	}
</style>
