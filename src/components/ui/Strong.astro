---
import type { HTMLAttributes } from 'astro/types';

/**
 * Props for a bold text element. This is used by Markdoc.
 * @property children - The content of the strong element
 */
interface Props extends HTMLAttributes<'strong'> {
	children: astroHTML.JSX.Element;
}

const props = Astro.props;
---

<strong {...props}>
	<slot />
</strong>

<style>
	strong {
		font-weight: var(--font-weight-bold);
	}
</style>
