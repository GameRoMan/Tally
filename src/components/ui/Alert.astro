---
import { getLocaleStrings } from '@i18n/index.ts';
import { Info } from '@lucide/astro';
import type { HTMLAttributes } from 'astro/types';
import type { WithChildren } from '../../types.ts';
import Strong from './Strong.astro';

/**
 * Props for an alert/notification aside with configurable styling. Used by Markdoc.
 */
type Props = WithChildren<true, HTMLAttributes<'aside'>>;

const msg = getLocaleStrings(Astro).alert.note.title;

const props = Astro.props;
---

<aside role="note" {...props}>
	<Strong>
		<Info size={16} aria-hidden="true" />
		{msg}
	</Strong>
	<slot />
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		gap: var(--p-sm);
		padding: var(--p-md);
		border-radius: var(--radius-md);
		border: var(--border-md) solid var(--primary);

		strong {
			display: inline-flex;
			flex-direction: row;
			align-items: center;
			gap: var(--p-xs);
			color: var(--primary);
			font-family: var(--font-header);
		}

		p {
			margin: 0;
		}
	}
</style>
